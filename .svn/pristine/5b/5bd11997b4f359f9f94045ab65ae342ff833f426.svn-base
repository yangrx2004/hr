<body>
    @using (Html.BeginForm("FSK_Add", "Client", FormMethod.Post))
    {
        
            @*<input type="hidden" id="firstKindName" name="cfsk.firstKindName">*@
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>


            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="81%" class="TD_STYLE2">
                            @Html.DropDownListFor(e => e.first_kind_id, ViewBag.s as IEnumerable<SelectListItem>, new { @class = "select" })
                    </td>
                </tr>
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        II级机构编号
                    </td>
                    <td width="81%" class="TD_STYLE2">
                      
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        II级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(e => e.second_kind_name, new { @class = "INPUT_STYLE1" })
                        @Html.ValidationMessageFor(e => e.second_kind_name, "", new { @class = "s" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextAreaFor(e => e.second_salary_id, 4, 0, new { @class = "TEXTAREA_STYLE1" })
                        @Html.ValidationMessageFor(e => e.second_salary_id, "", new { @class = "s" })

                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextAreaFor(e => e.second_sale_id, 4, 0, new { @class = "TEXTAREA_STYLE1" })
                        @Html.ValidationMessageFor(e => e.second_sale_id, "", new { @class = "s" })

                    </td>
                </tr>
            </table>
    }

</body>
</html>


