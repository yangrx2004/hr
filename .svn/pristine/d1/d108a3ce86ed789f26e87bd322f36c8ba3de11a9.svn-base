<body>
    <div id="app">

        <el-card class="box-card">
            <div slot="header" class="clearfix">
                <el-breadcrumb separator="/">
                    <el-breadcrumb-item :to="{ path: '/' }">人力资源</el-breadcrumb-item>
                    <el-breadcrumb-item><a href="/">客户化设置</a></el-breadcrumb-item>
                    <el-breadcrumb-item><a href="/">薪酬管理设置</a></el-breadcrumb-item>
                    <el-breadcrumb-item>薪酬项目设置</el-breadcrumb-item>
                </el-breadcrumb>
            </div>
            <div>
                <el-table :data="list"
                          border
                          style="width: 100%; ">
                    <el-table-column prop="attribute_name"
                                     label="薪酬项目名称"
                                     width="300">
                    </el-table-column>
                    <el-table-column label="操作">
                        <template slot-scope="scope">
                            <el-button size="mini" type="danger" v-on:click="remove(scope.row.pbc_id)">删除</el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </div>
        </el-card>

    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                list: [],

            },
            methods: {
                fill: function () {
                    axios.get('/Client/SMS_Show', {
                    })
                        .then(res => {
                            this.list = res.data;
                        })
                        .catch(err => {
                            console.log(err);
                        })
                },
                remove(id) {
                    var t = this;
                    if (confirm("确定删除此数据吗？")) {
                        axios.get('/Client/SMS_Delete', {
                            params: {
                                pbcID: id
                            }
                        })
                            .then(res => { 
                                if (res.data == 1) {
                                    this.$message({
                                        message: "删除成功!",
                                        type: "success",
                                    });
                                    t.fill();
                                }
                                else {
                                    alert('删除失败！')

                                }
                            })
                            .catch(err => {
                                console.log(err);
                            })
                    }

                }
            },
            mounted: function () {
                this.fill();
            },
            //时间格式
            //filters: {
            //    ftime: function (value, spe) {
            //        if (value == '/Date(-62135596800000)/') {
            //            return '空'
            //        }
            //        var dt = new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10));
            //        return dt.getFullYear() + "-" + (dt.getMonth() + 1) + "-" + dt.getDate();
            //    }
            //},
        })
    </script>

</body>
</html>

