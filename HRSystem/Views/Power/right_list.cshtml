
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>角色管理</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css" />
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript">
        function doDelete(id) {
            if (confirm("确定删除此角色吗？")) {
                location.href = "success.html?sysRole.roleId=" + id;
            }
        }
    </script>
</head>
<body>
    <div id="app">
        <el-card class="box-card">
            <div slot="header" class="clearfix">
                <el-breadcrumb separator="/">
                    <el-breadcrumb-item :to="{ path: '/' }">您正在做的业务是：人力资源</el-breadcrumb-item>
                    <el-breadcrumb-item><a href="/">权限管理</a></el-breadcrumb-item>
                    <el-breadcrumb-item>角色管理</el-breadcrumb-item>
                </el-breadcrumb>
            </div>
            <br>
            当前角色总数：<i style="color:red">{{this.rows}}</i>&nbsp;例
            <div>
                <el-row>
                    <el-col :span="6" style="margin-top:10px">
                        <el-button type="primary" size="small" onclick="window.location.href='/Power/right_add'">新增</el-button>
                    </el-col>
                </el-row>
                <el-table :data="list"
                          border
                          style="width: 100%; ">
                    <el-table-column prop="RolesID"
                                     label="角色编号"
                                     width="180">

                    </el-table-column>
                    <el-table-column prop="RolesName"
                                     label="角色名称"
                                     width="180">
                    </el-table-column>

                    <el-table-column prop="RolesInstruction"
                                     label="角色说明"
                                     width="180">
                    </el-table-column>
                    <el-table-column prop="RolesIf"
                                     label="是否可用"
                                     width="180">                      
                    </el-table-column>
                    <el-table-column label="操作">
                        <template slot-scope="scope">
                            <el-button size="mini" v-on:click="update(scope.row.RolesID)">修改</el-button>
                            <el-button size="mini" type="danger" v-on:click="remove(scope.row.RolesID)">删除</el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </div>
        </el-card>
        <el-pagination v-on:size-change="handleSizeChange"
                       v-on:current-change="handleCurrentChange"
                       :currentpage="currentPage"
                       :page-sizes="[3, 6, 9, 12]"
                       :page-size="pageSize"
                       layout="total, sizes, prev, pager, next, jumper"
                       :total="rows">
        </el-pagination>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                list: [],
                currentPage: 1,
                pageSize: 3,
                rows: 0,
            },
            methods: {
                fill: function () {
                    axios.get('/Power/Roles_Find', {
                        params: {
                            str: "",
                            CurrentPage: this.currentPage,
                            PageSize: this.pageSize
                        }
                    },
                        {
                        })
                        .then(res => {
                            console.log(res);
                            this.list = res.data.List;
                            this.rows = res.data.Rows;
                        })
                        .catch(err => {
                            console.log(err);
                        })
                },
                handleSizeChange: function (size) {
                    this.pageSize = size;
                    this.currentPage = 1;
                    this.fill();
                },
                handleCurrentChange: function (cpage) {
                    this.currentPage = cpage;
                    this.fill();
                },
                update(id) {
                   
                    location.href = "/Power/right_list_information?rid=" + id;
                },
                remove(id) {
                    if (confirm("确定删除此信息吗?")) {
                        axios.get('/Power/rolesDelete', {
                            params: {
                                rid: id
                            }
                        },
                            {
                            })
                            .then(res => {
                              //  console.log(res);
                                if (res.data == 2) {
                                    alert('此角色被使用中，暂不能删除');
                                    return;
                                }
                                else {
                                    this.$message({
                                        message: "删除成功!",
                                        type: "success",
                                    });
                                    this.fill();
                                }                          
                            })
                            .catch(err => {
                                console.log(err);
                            })
                    }

                }
            },
            mounted: function () {
                this.fill();
            },
            // 时间格式
            filters: {
                ftime: function (value, spe) {
                    if (value == '/Date(-62135596800000)/') {
                        return '空'
                    }
                    var dt = new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10));
                    return dt.getFullYear() + "年" + (dt.getMonth() + 1) + "月" + dt.getDate() + " 日";
                }
            },
        })
    </script>
</body>

</html>
