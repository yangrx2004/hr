    <script>
        $(function () {
            $("#Major_kind_name").change(function () {

                var url = "/Position/major/?name=" + $("#Major_kind_name").val() + "";
                console.log(url);
                $.getJSON(url, function (data) {
                    console.log(data);
                    $("#Major_name").html('')
                    
                    $.each(data, function (i, item) {
                        $("#Major_name").append("<option value='" + item.Major_name + "'>" + item.Major_name + "</option>");
                    })
                });
            })
        })
    </script>
